{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Action": [
                "logs:CreateLogStream",
                "logs:PutLogEvents"
            ],
            "Resource": "arn:aws:logs:${region}:${account_id}:log-group:l0-${name}:log-stream:${account_id}_CloudTrail_${region}*"
        }
    ]
}
